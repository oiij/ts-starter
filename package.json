{
  "name": "typescript-starter",
  "type": "module",
  "version": "0.1.0-beta.0",
  "description": "",
  "author": "Eiog",
  "license": "MIT",
  "homepage": "https://github.com/Eiog/typescript-starter",
  "repository": {
    "type": "git",
    "url": "git@github.com:Eiog/typescript-starter.git"
  },
  "bugs": "https://github.com/Eiog/typescript-starter/issues",
  "keywords": [
    "typescript-starter"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "dev:unbuild": "unbuild --stub",
    "build": "tsc --noEmit && tsup",
    "build:unbuild": "tsc --noEmit && unbuild",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "update:deps": "taze -w && pnpm i",
    "type:check": "tsc --noEmit",
    "cz": "czg",
    "commit": "git pull && git add -A && pnpm cz && git push",
    "link": "pnpm link --global",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.7.3",
    "@eiog/ts-config": "^0.0.3",
    "@types/node": "^22.7.4",
    "@vitest/ui": "^2.1.2",
    "bumpp": "^9.5.2",
    "commitlint": "^19.5.0",
    "cz-git": "^1.10.0",
    "czg": "^1.10.0",
    "eslint": "^9.11.1",
    "esno": "^4.7.0",
    "lint-staged": "^15.2.10",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.17.2",
    "tsup": "8.3.0",
    "typescript": "^5.6.2",
    "unbuild": "^2.0.0",
    "vitest": "^2.1.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm type:check"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix"
    ]
  }
}
